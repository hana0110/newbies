<div class="contents">
<div class="container form" style="background-image: url(http://cdn.home-designing.com/wp-content/uploads/2016/02/quirky-scandinavian-design-ideas.jpg); background-size: cover;">
  <div class="outer_form" style="background: rgba(250,250,250,0.7);">
  <div class="inner_form" style="background: rgba(250,250,250,0.5);">
<h2>Log in</h2>

<div class="form_fields">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を記憶 %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

</div>

  <div class="more_link_box">
  <p>アカウントをお持ちでない場合</p>
  <%= render "devise/shared/links" %>
</div>

</div>
</div>
</div>
</div>
