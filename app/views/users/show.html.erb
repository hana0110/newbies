<div class="contents">
  <div class="container form">
    <div class="outer_form">
      <div class="inner_form favorites">
        <h2>Favorite Designs</h2>
        </div>
      </div>
      </div>
    <div class="content_list clearfix">
          <% @user.designs.each do |design| %>
            <div class="thumbnail">
            <a href="/designs/<%= design.id %>">
            <%= image_tag design.images.first.image(:large) %></a>
    <span class="username">
      <span>By  <%= design.user.nickname %></span>
    </span>
      </div>
      <% end %>
      </div>
    </div>

<div class="divider"></div>

  <div class="container form">
    <div class="outer_form">
      <div class="inner_form my_designs">
        <h2>My Designs</h2>
        </div>
      </div>
      </div>


    <div class="content_list clearfix">
          <% @design.each do |design| %>
            <div class="thumbnail">
            <a href="/designs/<%= design.id %>">
              <%= image_tag design.images.first.image(:large) %></a>
            <div class="more">
              <ul class="more_list">
                <li><span><%= fa_icon "pencil" %></span>
                  <%= link_to 'Edit', "/designs/#{design.id}/edit", method: :get %>
                </li>
                <li><span><%= fa_icon "trash" %></span>
                  <%= link_to 'Delete', "/designs/#{design.id}", method: :delete %>
                </li>
              </ul>
            </div>
          </div>
          <% end %>
      </div>
    </div>

</div>
</div>