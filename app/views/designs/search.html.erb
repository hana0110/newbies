<div class="contents">
<div class="container form">
  <div class="outer_form">
  <div class="inner_form">
  <h2>Design Search</h2>
    <div class="form_fields">
    <div class="field">
      <%= form_tag('/designs/search', method: :get) do %>
      <input id="search_query" name="keyword" placeholder="natural, beige" type="text" value=""></input>
      <div class="actions">
      <button class="btn-search" title="Search" type="search">Search</button>
      </div>
      <% end %>
      <form accept-charset="utf-8" action="/" class="js-search-submit" method="get">
      </form>
    </div>
    </div>
  </div>
  </div>
  </div>

  <div class="container">
    <div class="header-section">
      <h2>Search Results</h2>
    </div>
    <ul class="designlist">
      <% @designs.each do |design| %>
      <div class="content_post">
      <a href="/designs/<%= design.id %>">
        <img src="<%= design.images.first.image %>" alt="design">
      </a>
      <div class="tags">
        <ul>
            <li><%= render 'designs/tag_list', tag_list: design.mood_list %></li>
            <li><%= render 'designs/tag_list', tag_list: design.color_list %></li>
            <li><%= render 'designs/tag_list', tag_list: design.roomtype_list %></li>
      </ul>
    </div>
    <span class="username">
      <span>By  <%= design.user.nickname %></span>
    </span>
        <span class="favorite"><%= link_to "Like", add_design_path(design), method: :post %></span>
      <div class="divider"></div>
  </div>
  <% end %>
    </ul>
    </div>
</div>