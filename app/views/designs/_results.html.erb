    <div class="header-section">
      <h2>Design Lists: #<%= params[:keyword]%></h2>
    </div>
    <ul class="designlist">
      <% @designs.each do |design| %>
    <div class="content_post">
    <a href="/designs/<%= design.id %>">
    <img src="<%= design.images.first.image(:large) %>" alt="design">
    </a>
    <div class="tags">
      <ul>
          <li><%= render 'designs/tag_list', tag_list: design.mood_list %></li>
          <li><%= render 'designs/tag_list', tag_list: design.color_list %></li>
          <li><%= render 'designs/tag_list', tag_list: design.roomtype_list %></li>
      </ul>
    </div>

    <span class="favorite">
    <% if user_signed_in? %>
    <span><%= fa_icon "plus-square-o" %></span>
      <%= link_to 'Add to favorites', add_design_path(design), method: :post %>
    <% end %>
      </span>
      <span class="username clearfix">
      <span>By  <%= design.user.nickname %></span>
    </span>

  </div>
  <% end %>
    </ul>
    </div>