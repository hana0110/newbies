  <%= form_for('/designs', method: :post) do |f| %>
  <div class="field">
    <%= f.label :image, "Image" %><br>
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :mood_list, "Mood" %><br />
    <%= text_field_tag 'design[mood_list]', '' %>
    </div>

  <div class="field">
    <%= f.label :color_list, "Color" %><br />
    <%= text_field_tag 'design[color_list]', '' %>
    </div>

  <div class="field">
    <%= f.label :roomtype_list, "Room Type" %><br />
    <%= text_field_tag 'design[roomtype_list]', '' %>
    </div>

  <div class="field">
    <%= f.label :text, "Details" %><br>
    <%= f.text_field :text %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>